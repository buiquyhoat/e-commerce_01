<% provide :title, t(".log_in") %>
<h2 class="text-center"><%= t ".log_in" %></h2>

<div class="row">
  <div class="col-md-4 col-md-offset-4 form-login-user">
    <%= form_for :session, url: login_path do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", required: "true",
          maxlength: Settings.email_length %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", required: "true" %>
      </div>
      <div class="form-group">
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span><%= t ".remember" %></span>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.submit t(".log_in"), class: "btn btn-default" %>
      </div>
    <% end %>

    <p><%= t ".new_user" %> <%= link_to t(".sign_up_now"), signup_path %></p>
  </div>
</div>
