<%= form_for [:admin, @category] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="form-group">
        <%= select_tag "parent_id",
          options_for_select(@categories.collect{
          |category| [category.category_name, category.id]},
          params["parent_id"]), prompt: t(".root"), class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :category_name %>
        <%= f.text_field :category_name, class: "form-control",
          maxlength: Settings.category_description, required: true %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, placeholder:
          t(".compose_description"), class: "form-control", rows: Settings.rows%>
      </div>

      <%= f.submit yield(:button_text), class: "btn btn-default" %>
    </div>
  </div>
<% end %>
