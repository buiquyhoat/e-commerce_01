<div class="detail-product">
  <div class="col-md-4 zoom-grid">
    <div class="flexslider">
      <%= image_tag @product.image? ? @product.image.url : Settings.image, class: "img-responsive" %>
    </div>
    <div class="purchase">
      <%= link_to t(".add_to_cart"), "/cart/#{@product.id}", method: :post %>
    </div>
  </div>
  <div class="col-md-8 dress-info">
    <div class="dress-name">
      <h3><%= @product.product_name %></h3>
      <span><%= @product.price %>$</span>
      <div class="clearfix"></div>
    </div>
    <div class="span span1">
      <p class="left"><%= t ".fabric_origin" %></p>
      <p class="right"><%= t ".vietnam" %></p>
      <div class="clearfix"></div>
    </div>
    <div class="span span2">
      <p class="left"><%= t ".made_in" %></p>
      <p class="right"><%= t ".vietnam" %></p>
      <div class="clearfix"></div>
    </div>
    <div class="span span1 star">
      <% rate_average = @product.rate_average %>
      <p class="left"><%= t ".Star" %></p>
      <p class="right" id="star_rewview_product">
        <% if rate_average.present? %>
          <% rate_round = round_average(rate_average) %>
          <% if rate_round == rate_round.to_i %>
            <% rate_round.to_i.times do |n| %>
              <%= image_tag(Settings.star_on, class: "star-review1") %>
            <% end %>
            <% (Settings.number_star - rate_round.to_i).times do |n| %>
              <%= image_tag(Settings.star_off, title: Settings.reivews[n],
              class: "star-review1") %>
            <% end %>
          <% else %>
            <% rate_round.to_i.times do |n| %>
              <%= image_tag(Settings.star_on, class: "star-review1") %>
            <% end %>
            <%= image_tag(Settings.star_half, class: "star-review1") %>
            <% (Settings.number_star - rate_round.to_i - 1).times do |n| %>
              <%= image_tag(Settings.star_off, class: "star-review1") %>
            <% end %>
          <% end %>
        <% else %>
        <% end %>
      </p>
      <div class="clearfix"></div>
    </div>
    <div class="span span3">
      <p class="left"><%= t ".color" %></p>
      <p class="right">
        <span class="selection-box">
          <select class="domains valid" name="domains">
            <%= @product.colors.each do |color| %>
              <option value="<%= color.id %>"><%= color.color_name %></option>
            <% end %>
          </select>
        </span>
      </p>
      <div class="clearfix"></div>
    </div>
    <div class="span span4">
      <p class="left"><%= t ".size" %></p>
      <p class="right">
        <span class="selection-box">
          <select class="domains valid" name="domains">
            <%= @product.sizes.each do |size| %>
              <option value="<%= size.id %>"><%= size.size_name %></option>
            <% end %>
          </select>
        </span>
      </p>
      <div class="clearfix"></div>
    </div>
    <ul class="nav nav-tabs">
      <li class="active">
        <a data-toggle="tab" href="#comment"><%= t ".comment" %></a>
      </li>
      <li>
        <a data-toggle="tab" href="#full_description"><%= t ".full_description" %></a>
      </li>
    </ul>
    <div class="tab-content">
      <div id="comment" class="tab-pane fade in active">
        <% if logged_in? %>
          <span class="header-comment">
            <%= t ".write_your_comment" %>
          </span>
          <div class="form-group">
            <%= form_for [@product, @product.comments.new], remote: true do  |f| %>
              <%= f.label :rating %>
              <% Settings.number_star.times do |n| %>
                <%= image_tag(Settings.star_off, title: Settings.reivews[n],
                  alt: "#{n+1}", class: "star-review") %>
              <% end %>
              <%= f.hidden_field :rating %>
              <%= f.text_area :content, class: "form-control",
                placeholder: t(".compose_new_comment"), class: "form-control",
                rows: Settings.rows, required: true %>
              <%= f.submit t(".submit"), class: "btn btn-default btn_comment",
                id: "comment-btn" %>
            <% end %>
          </div>
        <% else %>
          <%= t ".please_click" %>
          <%= link_to t(".here"), login_path %><%= t ".to_login" %>
        <% end %>

        <div class="list-comment">
          <ul id="comments">
            <%= render @comments %>
          </ul>
        </div>
      </div>
      <div id="full_description" class="tab-pane fade">
        <%= raw @product.description %>
      </div>
    </div>
  </div>
</div>
