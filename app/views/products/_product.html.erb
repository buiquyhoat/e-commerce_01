<div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
  <div class="sanpham">
    <div class="thumbnail">
      <div class="view-detail-product">
        <a href="#"><i class="fa fa-link"></i></a>
        <a href="<%= product_path(product) %>"><i class="fa fa-search"></i></a>
      </div>
      <%= image_tag product.image? ? product.image.url : Settings.image, class: "img-responsive" %>
      <div class="caption">
        <h3 class="category_name text-center">
          <%= link_to product.category.category_name if product.category.present? %></h3>
        <h3 class="product_name text-center"><%= product.product_name %></h3>
        <p class="price text-center">
          <%= product.price %><%= t ".dola" %>
        </p>
        <hr>
        <div class="description text-center">
          <%= raw product.description %>
        </div>
        <p>
          <a href="<%= product_path(product) %>" class="btn btn-default">
            <%= t ".view_more" %></a>
          <%= link_to t(".add_to_cart"), "/cart/#{product.id}", method: :post,
            class: "btn btn-default pull-right" %>
        </p>
      </div>
    </div>
  </div>
</div>
