<!DOCTYPE html>
<html>
<head>
  <title><%= t ".admin" %></title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "admin" %>
  <%= javascript_include_tag "admin" %>
</head>
<body>
  <div id="header" class="container-fluid">
    <div class="logo">
      <a href="#">
        <span><%= t ".admin" %></span>
        <span><%= t(".page") %></span>
      </a>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="sidebar col-md-3">
        <ul id="nav">
          <li>
            <a class="selected" href="/admin">
              <%= t ".dashboard" %>
            </a>
          </li>
          <li><a href="#"><%= t ".orders" %></a></li>
          <li><%= link_to t(".products_cat"), admin_products_path %></li>
          <li><a href="#"><%= t ".suggestions" %></a></li>
          <li><a href="#"><%= t ".users" %></a></li>
          <li><%= link_to t(".categories"), admin_categories_path %></li>
        </ul>
      </div>
      <div class="content col-md-9">
        <h1><%= t ".dashboard" %></h1>
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
